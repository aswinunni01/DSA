#include <iostream>
#include <cstring>
using namespace std;

struct studentdat{
    char name[20];
    int rollno;
    int mark[1];
    char grade = 'M';
};
void readmarks(studentdat* stud){
    for (int i=0;i<1;i++){
        cout << "Enter marks of subject "<< i+1 <<endl;
        cin >> stud->mark[i];
    }
}
void calculategrade(studentdat* stud){
    int total_mark = 0;
    for (int i =0; i<1;i++){
        total_mark = total_mark + stud->mark[i];
    }
    cout <<"Total Mark: "<<total_mark <<endl;
    int perc = int(total_mark/10);
    switch(perc){
        case(10): stud->grade='A';break;
        case(9): stud->grade='A'; break;
        case(8): stud->grade='A';break;
        case(7): stud->grade='B';break;
        case(6): stud->grade='B';break;
        case(5): stud->grade='C';break;
        case(4): stud->grade='C';break;
        case(3): stud->grade='F';break;
        default: stud->grade='F'; break;
    }
}


